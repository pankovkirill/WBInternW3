<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".СalculatorConstraintActivity">

    <TextView
        android:id="@+id/btn_replacement"
        style="@style/styleForDigitButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="+/-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btn_0"
        style="@style/styleForDigitButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_comma"
        app:layout_constraintStart_toEndOf="@id/btn_replacement" />

    <TextView
        android:id="@+id/btn_comma"
        style="@style/styleForDigitButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text=","
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_equally"
        app:layout_constraintStart_toEndOf="@id/btn_0" />

    <TextView
        android:id="@+id/btn_equally"
        style="@style/styleForDigitButton"
        android:background="@drawable/calculator_equal_btn_back"
        android:text="="
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_comma" />

    <TextView
        android:id="@+id/btn_1"
        style="@style/styleForDigitButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/btn_replacement"
        app:layout_constraintEnd_toStartOf="@id/btn_2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btn_2"
        style="@style/styleForDigitButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@id/btn_0"
        app:layout_constraintEnd_toStartOf="@id/btn_3"
        app:layout_constraintStart_toEndOf="@id/btn_1" />

    <TextView
        android:id="@+id/btn_3"
        style="@style/styleForDigitButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/btn_comma"
        app:layout_constraintEnd_toStartOf="@id/btn_plus"
        app:layout_constraintStart_toEndOf="@id/btn_2" />

    <TextView
        android:id="@+id/btn_plus"
        style="@style/styleForActionButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/btn_equally"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_3" />


    <TextView
        android:id="@+id/btn_4"
        style="@style/styleForDigitButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/btn_1"
        app:layout_constraintEnd_toStartOf="@id/btn_5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btn_5"
        style="@style/styleForDigitButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/btn_2"
        app:layout_constraintEnd_toStartOf="@id/btn_6"
        app:layout_constraintStart_toEndOf="@id/btn_4" />

    <TextView
        android:id="@+id/btn_6"
        style="@style/styleForDigitButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/btn_3"
        app:layout_constraintEnd_toStartOf="@id/btn_minus"
        app:layout_constraintStart_toEndOf="@id/btn_5" />

    <TextView
        android:id="@+id/btn_minus"
        style="@style/styleForActionButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/btn_plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_6" />

    <TextView
        android:id="@+id/btn_7"
        style="@style/styleForDigitButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/btn_4"
        app:layout_constraintEnd_toStartOf="@id/btn_8"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btn_8"
        style="@style/styleForDigitButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/btn_5"
        app:layout_constraintEnd_toStartOf="@id/btn_9"
        app:layout_constraintStart_toEndOf="@id/btn_7" />

    <TextView
        android:id="@+id/btn_9"
        style="@style/styleForDigitButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/btn_6"
        app:layout_constraintEnd_toStartOf="@id/btn_multiply"
        app:layout_constraintStart_toEndOf="@id/btn_8" />

    <TextView
        android:id="@+id/btn_multiply"
        style="@style/styleForActionButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="×"
        app:layout_constraintBottom_toTopOf="@+id/btn_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_9" />

    <TextView
        android:id="@+id/btn_clear"
        style="@style/styleForActionButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="C"
        android:textColor="#F44336"
        app:layout_constraintBottom_toTopOf="@+id/btn_7"
        app:layout_constraintEnd_toStartOf="@id/btn_staples"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btn_staples"
        style="@style/styleForActionButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="( )"
        app:layout_constraintBottom_toTopOf="@+id/btn_8"
        app:layout_constraintEnd_toStartOf="@id/btn_percent"
        app:layout_constraintStart_toEndOf="@id/btn_clear" />

    <TextView
        android:id="@+id/btn_percent"
        style="@style/styleForActionButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="%"
        app:layout_constraintBottom_toTopOf="@+id/btn_9"
        app:layout_constraintEnd_toStartOf="@id/btn_division"
        app:layout_constraintStart_toEndOf="@id/btn_staples" />

    <TextView
        android:id="@+id/btn_division"
        style="@style/styleForActionButton"
        android:background="@drawable/calculator_digit_btn_back"
        android:text="÷"
        app:layout_constraintBottom_toTopOf="@+id/btn_multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_percent" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="16dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toTopOf="@id/btn_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_access_time_24"
        app:layout_constraintBottom_toTopOf="@id/viewLine"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_design_services_24"
        app:layout_constraintBottom_toTopOf="@id/viewLine"
        app:layout_constraintStart_toEndOf="@id/imageTime" />

    <ImageView
        android:id="@+id/imageRule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_rule_24"
        app:layout_constraintBottom_toTopOf="@id/viewLine"
        app:layout_constraintStart_toEndOf="@id/imageService" />

    <ImageView
        android:id="@+id/imageClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_backspace_24"
        app:layout_constraintBottom_toTopOf="@id/viewLine"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:gravity="end"
        android:text="845"
        android:textColor="@color/gray_700"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@id/imageClear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewWorkSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="end|center"
        android:text="789+56"
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@id/textViewResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>