<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="styleForDigitButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/calculator_digit_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="styleForActionButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/calculator_action_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="styleForEqualButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="styleForDigitButtonLinear">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/calculator_digit_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="styleForActionButtonLinear">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/calculator_action_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="styleForEqualButtonLinear">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="SeekBarColor" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/white</item>
    </style>


</resources>